@copies	!
		ld 		(hl),e
		inc 	hl
		ld 		(hl),d
		dec 	hl

; ***************************************************************************************

@copies	@
		ld 		a,(hl)
		inc 	hl
		ld		h,(hl)
		ld		l,a


; ***************************************************************************************

@calls	+!
		ld 		a,(hl)
		add 	a,e
		ld 		(hl),a
		inc 	hl
		ld 		a,(hl)
		adc 	a,d
		ld 		(hl),a
		dec 	hl
		ret


; ***************************************************************************************

@copies	c!
		ld 		(hl),e


; ***************************************************************************************

@copies	c@
		ld 		l,(hl)
		ld 		h,0


; ***************************************************************************************

@calls	p@
		push 	bc
		ld		b,h
		ld 		c,l
		in 		l,(c)
		ld 		h,0
		pop 	bc
		ret


; ***************************************************************************************

@calls 	p!
		push 	bc
		push 	hl
		ld 		a,e
		ld		b,h
		ld 		c,l
		out 	(c),a
		pop 	hl
		pop 	bc
		ret

		